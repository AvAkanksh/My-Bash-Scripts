find . -type f \( -iname "*.mp4" -o -iname "*.mkv" -o -iname "*.avi" -o -iname "*.mov" -o -iname "*.nix" -o -iname "*.flv" \) -exec ffprobe -v error -select_streams v:0 -show_entries format=duration -of csv=p=0 "{}" \; | awk '{sum+=$1} END {printf "Total Duration: %d seconds (%.2f hours)\n", sum, sum/3600}'
